@model MovieCategoryModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-3">
        @await Html.PartialAsync("_Menu", Model.Categories)
        @*await Component.InvokeAsync("CategoryMenu")*@
    </div>
    <div class="col-md-9">
        <div class="card mb-3">
            <div class="card-body">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="~/img/@Model.Movie.ImageUrl" alt="@Model.Movie.Description" class="card-img" />
                    </div>
                    <div class="col-md-8">
                        <h5 class="card-title">
                            <a href="/Home/Details/@Model.Movie.Id">@Model.Movie.Name</a>
                        </h5>
                        <p class="card-text">
                            @Html.Raw(Model.Movie.Description)
                        </p>
                        <p class="card-text">
                            @{
                                var random = new Random();
                                int randomDay = random.Next(1, 10);
                            }
                            <small class="text-muted">@randomDay days ago.</small>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>